{
  "name": "n8n-nodes-miniagent",
  "version": "0.2.0",
  "description": "Lightweight AI Agent node for n8n - zero dependencies, built-in memory, RAG support, multi-LLM",
  "author": {
    "name": "Mauricio Perera",
    "email": "mauricio.perera@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MauricioPerera/n8n-nodes-miniagent.git"
  },
  "bugs": {
    "url": "https://github.com/MauricioPerera/n8n-nodes-miniagent/issues"
  },
  "homepage": "https://github.com/MauricioPerera/n8n-nodes-miniagent#readme",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "ai",
    "agent",
    "llm",
    "openai",
    "anthropic",
    "gemini",
    "claude",
    "gpt",
    "chatbot",
    "rag",
    "embeddings",
    "vector"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && shx cp nodes/MiniAgent/*.svg dist/nodes/MiniAgent/",
    "dev": "tsc --watch",
    "lint": "eslint nodes --ext .ts",
    "lintfix": "eslint nodes --ext .ts --fix",
    "prepublishOnly": "npm run build && npm run lint",
    "release": "npm run build && npm publish --access public"
  },
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": [
      "dist/nodes/MiniAgent/MiniAgent.node.js"
    ]
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.0",
    "n8n-workflow": "^1.0.0",
    "shx": "^0.3.4",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
